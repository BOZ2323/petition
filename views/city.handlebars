<div class="view">
        <div class="headline">
            <p>and thank you, {{city}}!</p>
        </div>
            <div class="signersList">

                {{#selectedSigners}}
                <!-- <p class="signees">{{first}} {{last}}</p> -->

                    {{#if url}}
                        <p class="supporter">
                            <i></i>  &nbsp;<a class="inline highlighted" href="{{url}}">
                            {{first}} {{last}},</a>
                            {{#if age}}
                            {{age}} years
                            {{/if}}
                            <!-- {{#if city}}
                            | <a class="inline" href="/petition/signers/{{city}}">{{city}}</a>
                            {{/if}} -->

                        </p>
                    {{else}}
                        <p class="supporter">
                            {{first}} {{last}},
                            {{#if age}}
                             {{age}} years
                            {{/if}}
                            {{#if city}}
                            <a class="inline" href="/supporter/{{city}}">{{city}}</a>

                            {{/if}}
                        </p>
                    {{/if}}
                {{/selectedSigners}}

            </div>
</div>
